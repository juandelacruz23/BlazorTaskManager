<li class="todo-item" id="todo-@Id">
  <p class="todo-title" @onclick="PrintId">@Title</p>
  <input 
    type="checkbox" 
    name="todo-@Id" 
    id="todo-checkobox-@Id" 
    @bind="IsChecked" }
  />
</li>

@code 
{
  [Parameter]
  public int Id { get; set; }
  [Parameter]
  public string Title { get; set; }
  [Parameter]
  public bool IsChecked { get; set; }

  private void PrintId()
  {
    Console.WriteLine("Id clicked: {0}",Id);
  }
}